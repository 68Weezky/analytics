<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up - HOCKEY K.E</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="min-h-screen bg-gray-100">
  <!-- Header -->
  <header class="bg-blue-800 text-white p-4 shadow-md">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center space-x-3">
        <div class="cursor-pointer hover:rotate-20 transition-transform">
          <i class="fas fa-hockey-puck text-2xl"></i>
        </div>
        <h1 class="text-2xl font-bold">HOCKEY K.E</h1>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto p-4 flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md mt-8">
      <h2 class="text-2xl font-bold text-center mb-6 text-blue-800">Create Your Account</h2>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded flex items-center">
          <i class="fas fa-exclamation-circle mr-2"></i>
          <%= error %>
        </div>
      <% } %>
      
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="mb-4 p-3 bg-green-100 border border-green-400 text-green-700 rounded flex items-center">
          <i class="fas fa-check-circle mr-2"></i>
          <%= success %>
        </div>
      <% } %>

      <form id="signupForm" action="/auth/signup" method="POST" class="space-y-4">
        <div>
          <label class="block text-gray-700 mb-2 font-medium">Full Name</label>
          <input
            type="text"
            name="name"
            value="<%= typeof formData !== 'undefined' ? formData.name : '' %>"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
            placeholder="John Doe"
          />
        </div>

        <div>
          <label class="block text-gray-700 mb-2 font-medium">Email</label>
          <input
            type="email"
            name="email"
            value="<%= typeof formData !== 'undefined' ? formData.email : '' %>"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
            placeholder="you@example.com"
          />
        </div>

        <div>
          <label class="block text-gray-700 mb-2 font-medium">Password</label>
          <input
            type="password"
            name="password"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
            minlength="6"
            placeholder="At least 6 characters"
          />
        </div>

        <div>
          <label class="block text-gray-700 mb-2 font-medium">Confirm Password</label>
          <input
            type="password"
            name="confirmPassword"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
            minlength="6"
            placeholder="Confirm your password"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md font-medium transition duration-300 flex items-center justify-center"
        >
          <i class="fas fa-user-plus mr-2"></i> Create Account
        </button>
      </form>

      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Already have an account? 
          <a href="/auth/login" class="text-blue-600 hover:underline font-medium">
            Sign In
          </a>
        </p>
      </div>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">
              Or sign up with
            </span>
          </div>
        </div>

        <div class="mt-6 grid grid-cols-2 gap-3">
          <a href="https://accounts.google.com/o/oauth2/v2/auth?
                  client_id=YOUR_GOOGLE_CLIENT_ID
                  &redirect_uri=YOUR_REDIRECT_URI
                  &response_type=code
                  &scope=email%20profile
                  &access_type=online" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
            <i class="fab fa-google text-red-500"></i>
          </a>
          <a href="https://www.facebook.com/v19.0/dialog/oauth?
                  client_id=YOUR_FACEBOOK_APP_ID
                  &redirect_uri=YOUR_REDIRECT_URI
                  &response_type=code
                  &scope=email,public_profile" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
            <i class="fab fa-facebook-f text-blue-600"></i>
          </a>
        </div>
      </div>
    </div>
  </main>

  <script>
    document.getElementById('signupForm').addEventListener('submit', function(e) {
      const password = document.querySelector('input[name="password"]').value;
      const confirmPassword = document.querySelector('input[name="confirmPassword"]').value;
      
      if (password !== confirmPassword) {
        e.preventDefault();
        alert('Passwords do not match');
        return;
      }
      
      // If validation passes, the form will submit normally
      // and the server will handle the redirect on success
    });
  </script>
</body>
</html>
